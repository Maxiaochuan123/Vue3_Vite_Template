{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types", // 默认值
      "src/types"
    ],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
      "@apis/*": ["./src/services/apis/*"],
      "@utils/*": ["./src/utils/*"],
      "@plugins/*": ["./src/plugins/*"],
      "@store/*": ["./src/store/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "auto-import.d.ts",
    "declare-module.d.ts",
    "components.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
